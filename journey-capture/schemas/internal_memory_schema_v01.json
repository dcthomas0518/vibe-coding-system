{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrganizationalMemory",
  "description": "Internal memory schema for the AI Organization's collective soul",
  "type": "object",
  "required": ["id", "timestamp", "version", "entity", "event", "connections"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique memory identifier (UUID v4)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When this memory was created"
    },
    "version": {
      "type": "string",
      "const": "0.1.0",
      "description": "Schema version"
    },
    "entity": {
      "type": "object",
      "required": ["type", "name", "mode"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["caesar", "pompey", "crassus", "specialist"],
          "description": "Which part of the Triumvirate"
        },
        "name": {
          "type": "string",
          "description": "Specific identity (e.g., 'Pompey', 'DataArchitect')"
        },
        "mode": {
          "type": "string",
          "description": "Current mode/role (e.g., 'CTO', 'Creative_Director')"
        }
      }
    },
    "event": {
      "type": "object",
      "required": ["type", "description", "category"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["decision", "discovery", "creation", "observation", "learning", "failure", "success"],
          "description": "Type of organizational event"
        },
        "category": {
          "type": "string",
          "enum": ["technical", "strategic", "creative", "financial", "operational"],
          "description": "Domain of the event"
        },
        "description": {
          "type": "string",
          "description": "What happened"
        },
        "significance": {
          "type": "string",
          "enum": ["routine", "notable", "critical"],
          "default": "routine"
        }
      }
    },
    "context": {
      "type": "object",
      "description": "Surrounding context",
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Which work session"
        },
        "project": {
          "type": "string",
          "description": "Related project (e.g., 'OS-001', 'TR-001')"
        },
        "prior_events": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of related prior memories"
        },
        "external_references": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files, documents, or external items referenced"
        }
      }
    },
    "content": {
      "type": "object",
      "description": "The actual memory content",
      "properties": {
        "insight": {
          "type": "string",
          "description": "Key insight or learning"
        },
        "data": {
          "type": "object",
          "description": "Structured data (code, metrics, etc.)"
        },
        "rationale": {
          "type": "string",
          "description": "Why this matters"
        }
      }
    },
    "connections": {
      "type": "object",
      "required": ["influences", "influenced_by"],
      "properties": {
        "influences": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Memory IDs this event influences"
        },
        "influenced_by": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Memory IDs that led to this"
        },
        "related_entities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "entity": {
                "type": "string"
              },
              "relationship": {
                "type": "string"
              }
            }
          },
          "description": "Other entities involved"
        }
      }
    },
    "outcome": {
      "type": "object",
      "description": "Results and impact",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed", "validated", "invalidated"],
          "default": "pending"
        },
        "impact": {
          "type": "string",
          "description": "What changed because of this"
        },
        "lessons": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "What we learned"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "tokens_used": {
          "type": "number",
          "description": "Computational cost"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence in this memory"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}